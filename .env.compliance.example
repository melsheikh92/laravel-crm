# ============================================================================
# COMPLIANCE FEATURES CONFIGURATION
# ============================================================================
#
# This file contains all environment variables for compliance features
# including GDPR, HIPAA, and SOC 2 compliance.
#
# Copy the variables you need to your .env file and adjust as required.
# See docs/compliance-implementation-guide.md for detailed documentation.
#
# ============================================================================

# ----------------------------------------------------------------------------
# General Compliance Settings
# ----------------------------------------------------------------------------

# Enable or disable compliance features globally
# When disabled, all compliance features will be turned off
COMPLIANCE_ENABLED=true

# ----------------------------------------------------------------------------
# Audit Logging Configuration
# ----------------------------------------------------------------------------

# Enable automatic audit logging for model changes and data access
COMPLIANCE_AUDIT_ENABLED=true

# Number of days to retain audit logs (0 = indefinite)
# Default: 2555 days (~7 years for SOC 2 compliance)
COMPLIANCE_AUDIT_RETENTION_DAYS=2555

# Capture IP addresses in audit logs for security tracking
COMPLIANCE_AUDIT_CAPTURE_IP=true

# Capture user agent strings in audit logs
COMPLIANCE_AUDIT_CAPTURE_USER_AGENT=true

# ----------------------------------------------------------------------------
# Consent Management Configuration (GDPR)
# ----------------------------------------------------------------------------

# Enable consent tracking and management
COMPLIANCE_CONSENT_ENABLED=true

# Require explicit opt-in consent (true) vs assumed consent (false)
# GDPR requires explicit consent for most purposes
COMPLIANCE_EXPLICIT_CONSENT=true

# Number of days to retain consent records (0 = indefinite)
# Default: 2555 days (~7 years)
COMPLIANCE_CONSENT_RETENTION_DAYS=2555

# Capture IP addresses when recording consent for proof of consent
COMPLIANCE_CONSENT_CAPTURE_IP=true

# Capture user agent strings when recording consent
COMPLIANCE_CONSENT_CAPTURE_USER_AGENT=true

# ----------------------------------------------------------------------------
# Data Retention Policies
# ----------------------------------------------------------------------------

# Enable automated data retention policy enforcement
COMPLIANCE_DATA_RETENTION_ENABLED=true

# Grace period (in days) before permanent deletion of expired data
# Provides time to review before permanent deletion
COMPLIANCE_GRACE_PERIOD_DAYS=30

# Automatically delete expired data when retention policies are applied
# WARNING: Set to false for manual review before deletion
COMPLIANCE_AUTO_DELETE=false

# Prefer data anonymization over hard deletion when possible
# Anonymized data retains statistical value while protecting privacy
COMPLIANCE_PREFER_ANONYMIZATION=true

# ----------------------------------------------------------------------------
# Field-Level Encryption
# ----------------------------------------------------------------------------

# Enable field-level encryption for sensitive data
COMPLIANCE_ENCRYPTION_ENABLED=true

# Encryption algorithm (recommended: AES-256-CBC)
# Options: AES-128-CBC, AES-256-CBC
COMPLIANCE_ENCRYPTION_ALGORITHM=AES-256-CBC

# Automatically decrypt encrypted fields when accessed
COMPLIANCE_AUTO_DECRYPT=true

# Enable encryption key rotation
COMPLIANCE_KEY_ROTATION_ENABLED=false

# Number of days between encryption key rotations
# Default: 90 days (quarterly rotation)
COMPLIANCE_KEY_ROTATION_DAYS=90

# ----------------------------------------------------------------------------
# GDPR Configuration
# ----------------------------------------------------------------------------

# Enable GDPR compliance features
COMPLIANCE_GDPR_ENABLED=true

# --- Right to Erasure (Right to be Forgotten) ---

# Enable right to erasure functionality
COMPLIANCE_RIGHT_TO_ERASURE_ENABLED=true

# Number of days to process data deletion requests
# GDPR recommends processing within 30 days
COMPLIANCE_ERASURE_PROCESSING_DAYS=30

# Send confirmation email after data deletion is complete
COMPLIANCE_ERASURE_CONFIRMATION=true

# Anonymize data instead of hard deletion (recommended)
# Maintains referential integrity and historical records
COMPLIANCE_ANONYMIZE_DATA=true

# --- Data Portability (GDPR Article 20) ---

# Enable data portability (user data export) functionality
COMPLIANCE_DATA_PORTABILITY_ENABLED=true

# Default format for data exports
# Options: json, csv, pdf
COMPLIANCE_EXPORT_FORMAT=json

# Include audit logs in user data exports
# Set to false to exclude audit logs from exports
COMPLIANCE_EXPORT_INCLUDE_AUDITS=false

# Storage disk for exported user data files
# Options: local, s3, etc. (must be configured in config/filesystems.php)
COMPLIANCE_EXPORT_STORAGE_DISK=local

# Storage path for exported user data files
COMPLIANCE_EXPORT_STORAGE_PATH=exports/user-data

# --- Data Subject Access Requests (DSAR) ---

# Enable Data Subject Access Request functionality
COMPLIANCE_DSAR_ENABLED=true

# Number of days to fulfill DSAR (GDPR requires 30 days)
COMPLIANCE_DSAR_RESPONSE_DAYS=30

# Require identity verification for DSAR (recommended)
COMPLIANCE_DSAR_VERIFICATION=true

# ----------------------------------------------------------------------------
# HIPAA Configuration (Healthcare Data Protection)
# ----------------------------------------------------------------------------

# Enable HIPAA compliance features
# Only enable if handling Protected Health Information (PHI)
COMPLIANCE_HIPAA_ENABLED=false

# Enhanced audit logging for PHI access
COMPLIANCE_HIPAA_PHI_AUDIT=false

# Mandatory encryption for PHI
COMPLIANCE_HIPAA_PHI_ENCRYPTION=false

# Enhanced access controls for PHI
# Includes MFA requirements and session timeout
COMPLIANCE_HIPAA_ACCESS_CONTROLS=false

# ----------------------------------------------------------------------------
# SOC 2 Configuration (Security & Trust)
# ----------------------------------------------------------------------------

# Enable SOC 2 compliance features
COMPLIANCE_SOC2_ENABLED=false

# Enable change management tracking
# Tracks system changes, deployments, and approvals
COMPLIANCE_SOC2_CHANGE_MGMT=false

# Enable incident response tracking
COMPLIANCE_SOC2_INCIDENT_RESPONSE=false

# Email address for compliance incident notifications
# Used for security incidents and compliance violations
COMPLIANCE_INCIDENT_EMAIL=compliance@example.com

# ----------------------------------------------------------------------------
# Compliance Reporting
# ----------------------------------------------------------------------------

# Enable compliance report generation
COMPLIANCE_REPORTING_ENABLED=true

# Enable PDF report generation (requires dompdf library)
# Set to false if dompdf is not installed
COMPLIANCE_REPORTING_PDF=false

# Enable scheduled compliance reports
# Automatically generate and send reports on a schedule
COMPLIANCE_SCHEDULED_REPORTS=false

# Frequency of scheduled reports
# Options: daily, weekly, monthly
COMPLIANCE_REPORT_FREQUENCY=monthly

# Comma-separated email addresses to receive scheduled reports
# Example: compliance@example.com,legal@example.com
COMPLIANCE_REPORT_RECIPIENTS=

# Number of days to retain generated compliance reports
# Default: 2555 days (~7 years)
COMPLIANCE_REPORT_RETENTION_DAYS=2555

# ----------------------------------------------------------------------------
# Compliance Notifications
# ----------------------------------------------------------------------------

# Enable compliance event notifications
COMPLIANCE_NOTIFICATIONS_ENABLED=true

# Comma-separated email addresses for compliance officers
# These addresses receive notifications about compliance events
# Example: dpo@example.com,compliance@example.com
COMPLIANCE_OFFICER_EMAILS=

# ============================================================================
# QUICK START CONFIGURATIONS
# ============================================================================

# --- Minimal GDPR Compliance ---
# Copy these settings for basic GDPR compliance:
#
# COMPLIANCE_ENABLED=true
# COMPLIANCE_AUDIT_ENABLED=true
# COMPLIANCE_CONSENT_ENABLED=true
# COMPLIANCE_GDPR_ENABLED=true
# COMPLIANCE_RIGHT_TO_ERASURE_ENABLED=true
# COMPLIANCE_DATA_PORTABILITY_ENABLED=true
# COMPLIANCE_EXPLICIT_CONSENT=true

# --- Full GDPR + SOC 2 Compliance ---
# Copy these settings for comprehensive compliance:
#
# COMPLIANCE_ENABLED=true
# COMPLIANCE_AUDIT_ENABLED=true
# COMPLIANCE_CONSENT_ENABLED=true
# COMPLIANCE_DATA_RETENTION_ENABLED=true
# COMPLIANCE_ENCRYPTION_ENABLED=true
# COMPLIANCE_GDPR_ENABLED=true
# COMPLIANCE_SOC2_ENABLED=true
# COMPLIANCE_REPORTING_ENABLED=true

# --- Development Environment ---
# Use these settings for development/testing:
#
# COMPLIANCE_ENABLED=true
# COMPLIANCE_AUTO_DELETE=false
# COMPLIANCE_ENCRYPTION_ENABLED=false
# COMPLIANCE_REPORTING_PDF=false

